{
  "compilerOptions": {
    "target": "es2023",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts","src/interfaces/**/*.d.ts"],
  "exclude": ["node_modules"]
}